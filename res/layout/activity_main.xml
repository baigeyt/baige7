<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#96ea34"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:baselineAligned="false" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="510dp"
                android:layout_height="510dp"
                android:layout_margin="20dp"
                android:layout_weight="4"
                android:src="@drawable/kongbai" />

            <TextView
                android:id="@+id/textname"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_view_border"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="姓名："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textcardno"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_view_border"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="卡号："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="510dp"
                android:layout_height="510dp"
                android:layout_margin="20dp"
                android:layout_weight="4"
                android:src="@drawable/kongbai" />

            <TextView
                android:id="@+id/textgrade"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_view_border"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="年级："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textsex"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_view_border"
                android:gravity="center_vertical"
                android:paddingLeft="4dp"
                android:text="性别："
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="30sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#67a224"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout 
            android:id="@+id/lvSurface"
            android:layout_width="1dp"
            android:layout_height="1dp">
            <SurfaceView
            android:id="@+id/surfaceView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/textConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="正在检测网络。。。"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp" />
        <!--  -->

        <TextView
            android:id="@+id/textRSSI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textkq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textcname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14pt" />

        <!-- 时间 -->

        <com.hyc.view.DigitalClock
            android:id="@+id/digitalClock1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14pt" />

        <com.hyc.view.Datedate
            android:id="@+id/datedate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="11pt" />
    </LinearLayout>

</LinearLayout>